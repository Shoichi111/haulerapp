rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Admin whitelist — only users whose UID exists in admins/ can act as admin
    function isAdmin() {
      return request.auth != null &&
        exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Projects: anyone can read, only whitelisted admins can write
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Briefings: anyone can read published, only whitelisted admins can write
    match /briefings/{briefingId} {
      allow read: if resource.data.status == 'published' || isAdmin();
      allow write: if isAdmin();
    }

    // Acknowledgements: NO direct client writes — all submissions go through Cloud Function
    // Cloud Function validates fields, checks duplicates, and sets server timestamp
    match /acknowledgements/{ackId} {
      allow create: if false;   // blocked — must go through Cloud Function
      allow read, list: if isAdmin();
      allow update, delete: if false;
    }

    // Admin whitelist document — each admin can read their own entry (for auth checks)
    match /admins/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false; // managed manually in Firebase console
    }
  }
}
