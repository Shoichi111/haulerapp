rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Published files (PDFs + photos + TTS audio): public read, admin-only write
    match /published/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null
        && request.auth.token.admin == true
        && request.resource.size < 10 * 1024 * 1024
        && (request.resource.contentType == 'application/pdf'
            || request.resource.contentType.matches('audio/.*')
            || request.resource.contentType.matches('image/.*'));
    }

    // Draft files: admin-only read and write (not publicly accessible)
    match /drafts/{allPaths=**} {
      allow read: if request.auth != null
        && request.auth.token.admin == true;
      allow write: if request.auth != null
        && request.auth.token.admin == true
        && request.resource.size < 10 * 1024 * 1024;
    }

    // Voice recordings: admin-only, max 25MB
    match /recordings/{allPaths=**} {
      allow read: if request.auth != null
        && request.auth.token.admin == true;
      allow write: if request.auth != null
        && request.auth.token.admin == true
        && request.resource.size < 25 * 1024 * 1024;
    }
  }
}
